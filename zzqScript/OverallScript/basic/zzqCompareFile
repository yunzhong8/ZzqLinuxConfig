#!/bin/bash

# 检查是否传入两个文件作为参数
if [ $# -ne 2 ]; then
    echo "Usage: $0 file1 file2"
    exit 1
fi

# 获取传入的文件
file1=$1
file2=$2

# 比对两个文件并逐行显示差异，找到不同之处时暂停
diff --old-group-format=$'\n>>> %dn File1: %<\n' \
     --new-group-format=$'>>> %dn File2: %>\n' \
     --unchanged-group-format=$'' \
     --changed-group-format=$'\n>>> %dn File1: %<\n>>> %dn File2: %>\n' "$file1" "$file2" | while read -r line; do
    echo "$line"
    read -p "Press any key to continue..."
done

